{
  "agent": {
    "build": {
      "disable": true,
    },
    "plan": {
      "disable": true
    },
  },
  "mcp": {
    "parallel-ai": {
      "type": "remote",
      "url": "https://search-mcp.parallel.ai/mcp",
      "enabled": true,
      "headers": {
        "Authorization": "Bearer {env:PARALLEL_API_KEY}"
      }
    },
    "grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": false
    }
  },
  "experimental": {
    "openTelemetry": true
  },
  "default_agent": "morney",
  "$schema": "https://opencode.ai/config.json"
}
